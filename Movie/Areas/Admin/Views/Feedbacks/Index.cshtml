@model IEnumerable<Movie.Models.Feedback>
@{
    var admin = Session["admin"] as Movie.Models.Account;
}
@{
    ViewBag.Title = "Danh Sách Phản Hồi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header py-1">
    <h4 class="m-0 font-weight-bold text-primary text-center">Danh Sách Các Phản Hồi</h4>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Người Gửi
                    </th>
                    <th>
                        Ngày Gửi
                    </th>
                    <th>
                        Phim
                    </th>
                    <th>
                        Trạng Thái
                    </th>
                    <th>Tác Vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDFilm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a href="@Url.Action("Details","Feedbacks" ,new { id=item.Id})" title="Chi Tiết"><i class="fas fa-info-circle" style="font-size: 1.6rem;color: rgb(17, 0, 255);"></i></a>
                            <a href="@Url.Action("Edit","Feedbacks" ,new { id=item.Id})" title="Sửa" class="mx-2"><i class="fas fa-edit" style="font-size: 1.5rem; color: rgb(0, 255, 0);"></i></a>
                            @if (admin.Class == true)
                            {
                                <a href="@Url.Action("Delete", "Feedbacks", new { id = item.Id })" title="Xóa"><i class="fas fa-trash-alt" style="font-size:1.5rem ; color: rgb(250, 115, 115);"></i></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

