</div>
<script src="~/Assets/Site/js/jquery.slidey.js"></script>
<script src="~/Assets/Site/js/jquery.dotdotdot.min.js"></script>
<script type="text/javascript">
    $("#slidey").slidey({
        interval: 8000,
        listCount: 5,
        autoplay: false,
        showList: true
    });
    $(".slidey-list-description").dotdotdot();
</script>
